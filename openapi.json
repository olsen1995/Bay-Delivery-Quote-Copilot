{
    "openapi": "3.0.1",
    "info": {
        "title": "Life OS API",
        "description": "Plugin for interacting with your Life OS Private Assistant",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://life-os-private-practical-co-pilot.onrender.com"
        }
    ],
    "paths": {
        "/ask": {
            "post": {
                "summary": "Ask a question",
                "operationId": "ask",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "prompt": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "prompt"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "response": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}