{
  "openapi": "3.0.1",
  "info": {
    "title": "LifeOS Co-Pilot API",
    "version": "v2",
    "description": "Endpoints for managing memory, reminders, tasks, and AI-enhanced life assistance."
  },
  "paths": {
    "/ask": {
      "post": {
        "summary": "Ask a question or give a task",
        "operationId": "ask_post",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  },
                  "user_id": {
                    "type": "string"
                  },
                  "adhd_mode": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "message"
                ]
              },
              "example": {
                "message": "Remind me to water the plants",
                "user_id": "guest_123",
                "adhd_mode": true
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "AI-generated response"
          }
        }
      }
    },
    "/memory": {
      "get": {
        "summary": "View all saved memory",
        "operationId": "memory_get",
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "HTML dashboard"
          }
        }
      },
      "post": {
        "summary": "Clear all memory for a user",
        "operationId": "memory_post",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "confirm": {
                    "type": "string"
                  },
                  "user_id": {
                    "type": "string"
                  }
                },
                "required": [
                  "confirm",
                  "user_id"
                ]
              }
            }
          }
        },
        "responses": {
          "303": {
            "description": "Redirect after clear"
          }
        }
      }
    },
    "/api-keys": {
      "get": {
        "summary": "View API key usage dashboard",
        "operationId": "apikeys_get",
        "responses": {
          "200": {
            "description": "HTML table of keys"
          }
        }
      }
    }
  }
}